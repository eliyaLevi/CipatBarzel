@model IEnumerable<CipatBarzel.Models.DefenceAmmunition>

@{
    ViewData["Title"] = "DefenceAmmunition";
}

<h1>תחמושת הגנה</h1>

<p>
    <a asp-action="CreateDefenceAmmunition">הוסף טיל חדש </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
          
            <td>
                    <form asp-action="updateDefenceAmmunition" method="get">
                        <input name="amount" value="@item.Amount" />
                        <input name="dfid" hidden ="hidden" value="@item.Id" />
                        <input type="submit" value="עדכון מלאי " />

                    </form>
                  
               
            </td>
        </tr>
}
    </tbody>
</table>
